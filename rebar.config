{erl_opts, [debug_info]}.

{pre_hooks, [
    {"(linux|darwin|solaris)", compile, "make -C c_src"},
    {"(freebsd|openbsd|netbsd)", compile, "gmake -C c_src"}
]}.

{post_hooks, [
    {"(linux|darwin|solaris)", clean, "make -C c_src clean"},
    {"(freebsd|openbsd|netbsd)", clean, "gmake -C c_src clean"},
    {edoc, "ex_doc --config .ex_doc.config --source-url \"https://github.com/msantos/alcove\" --source-ref \"master\" \"alcove\" `erl -noshell -s init stop -eval '{ok, [{_,_,X}]} = file:consult(\"src/alcove.app.src\"), io:format(\"~s\", [proplists:get_value(vsn, X, \"0.0.0\")]).'` _build/default/lib/alcove/ebin"}
]}.

{xref_checks, [undefined_function_calls]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.

{edoc_opts, [
    {doclet, edoc_doclet_chunks},
    {layout, edoc_layout_chunks},
    {dir, "_build/default/lib/alcove/doc"}
]}.

% rebar2 compatibility: disable port compiler
{port_specs, [{"", []}]}.
